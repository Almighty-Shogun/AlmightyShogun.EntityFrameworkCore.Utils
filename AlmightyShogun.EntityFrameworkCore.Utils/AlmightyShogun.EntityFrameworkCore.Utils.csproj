<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
        <TargetFramework>net10.0</TargetFramework>

        <Version>1.0.0</Version>
        <Authors>Almighty-Shogun</Authors>
        <PackageId>AlmightyShogun.EntityFrameworkCore.Utils</PackageId>

        <PackageReadmeFile>README.md</PackageReadmeFile>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <Description>A simple C# library that add extensions to Entity Framework Core</Description>

        <RepositoryType>git</RepositoryType>
        <RepositoryUrl>https://github.com/Almighty-Shogun/AlmightyShogun.EntityFrameworkCore.Utils</RepositoryUrl>
        <PackageProjectUrl>https://github.com/Almighty-Shogun/AlmightyShogun.EntityFrameworkCore.Utils</PackageProjectUrl>
    </PropertyGroup>

    <ItemGroup>
        <None Include="../README.md">
            <Pack>true</Pack>
            <PackagePath>\</PackagePath>
        </None>
    </ItemGroup>
    
    <ItemGroup>
      <PackageReference Include="Microsoft.EntityFrameworkCore" Version="10.0.1" />
    </ItemGroup>

</Project>
